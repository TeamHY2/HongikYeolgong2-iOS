default_platform(:ios)

platform :ios do

desc "Push a new beta build to TestFlight"
lane :beta do

  # ì•±ìŠ¤í† ì–´ í† í° ë¡œë“œ
  app_store_connect_api_key(
   key_id: ENV['APP_STORE_CONNECT_API_KEY_KEY_ID'],
   issuer_id: ENV['APP_STORE_CONNECT_API_KEY_ISSUER_ID'],
    key_content: ENV['APP_STORE_CONNECT_API_KEY_KEY'],
   is_key_content_base64: false
  )

  new_build_number = latest_testflight_build_number(app_identifier: ENV['APP_IDENTIFIER'])
  version = get_version_number(xcodeproj: 'HongikYeolgong2.xcodeproj')

  # match ë°©ì‹ ì‚¬ìš©
  match(
    git_url: ENV['GIT_URL'],
    storage_mode: 'git',
    type: 'appstore',
    readonly: true
  )
  sync_code_signing(
      type: "appstore",
      app_identifier: ENV['APP_IDENTIFIER'],
      readonly: true
    )

  # ë¹Œë“œ ë²„ì „ì„¤ì • ì´ì „ë²„ì „ + 1
  increment_build_number(
    build_number: new_build_number + 1
  )
    
  gym(
    clean: true,
    export_method: 'app-store'
  )

  # ì•±ë¹Œë“œ
  build_app(
    scheme: 'HongikYeolgong2',
    export_method: 'app-store'
  )

  # í…Œí”Œì— ì—…ë¡œë“œ
  upload_to_testflight(skip_waiting_for_build_processing: true)

  # ë””ìŠ¤ì½”ë“œ ë…¸í‹°
  discord_notifier(
    webhook_url: 'https://discord.com/api/webhooks/1295354068981776474/KcvWD1Z20p2qTQdP-5mUTyug4Knw7iJDwhkyqlNCaSrREBgBFYJtDL_DcpN7XmoSG-yz',
    title: 'New TestFlight Build Available!',
    description: "ìƒˆë¡œìš´ ë²„ì „ #{version}(#{new_build_number + 1}) ì´ TestFlightì— ì—…ë¡œë“œ ë˜ì—ˆìŠµë‹ˆë‹¤. ğŸ™Œ",
    success: true,
    fields: [  
      {
        name: 'Version',
        value: version
      },
      {
        name: 'Build',
        value: (new_build_number + 1).to_s
      }
    ]
  )
end
end